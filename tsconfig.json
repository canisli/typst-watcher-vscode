{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "out",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node", "vscode"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", ".vscode-test"]
  }
  